{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "typeRoots": [
            "types",
            "node_modules/@types"
        ],
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "ts-node": {
        "files": true,
        "transpileOnly": true
    },
    "include": [
        "test/*",
        "*.ts"
    ],
    "exclude": [
        "./gulpfile.js",
        "node_modules"
    ]
}